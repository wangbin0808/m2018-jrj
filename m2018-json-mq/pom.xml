	<!-- Maven控制Spring Profile -->
	<profiles>
	    <profile>
	        <id>dev</id>
	        <activation>
	            <activeByDefault>true</activeByDefault>
	        </activation>
	        <properties>
	            <profileActive>dev</profileActive>
	            <useOtherJdk>fasle</useOtherJdk>
	        </properties>
	    </profile>
	    <profile>
	        <id>prod</id>
	        <properties>
	            <profileActive>prod</profileActive>
	            <useOtherJdk>true</useOtherJdk>
	        </properties>
	    </profile>
	</profiles>
</project>
